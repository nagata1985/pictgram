<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">コメント</h1>

        <%= form_for @coment do |f| %>

          <div class="form-group">
            <%= f.label :text %>
            <%= f.text_area :text, class: 'form-control' %>
            <%= f.hidden_field :topic_id,value: params[:topic_id] %>
          </div>
          <%# topic_id名前：送られてきたparams[:topic_id]を受け取って、formで送るぶんを書く。構文は、f.hidden_fieldを調べて使う。 %>

          <% if !current_user.nil? %>
            <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          <% end %>

        <% end %>

      </div>
    </div>
  </div>
</div>
