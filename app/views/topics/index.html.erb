<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>

            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <span class="fa fa-heart like-btn-unlike topic-index-icon"></span>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                <span class="fa fa-heart like-btn topic-index-icon"></span>
              <% end %>
            <% end %>
            <%= topic.favorites.count %>

            <%= link_to coments_new_path(topic_id: topic.id) do %>
            <%# topicのidをおくるパスにする。上記のパスになにかを追加 %>
              <%= image_tag 'rails_images/images/icons/comment.png', class: 'topic-index-icon' %>
            <% end %>

            <p class="topic-text">
              <%= topic.description %>
            </p>

　　　　　　 <p>コメント<p>

  　　　　　 <% topic.coments.each do |coment| %>
              <p class="coment">
                <%= coment.text %>
              </p>
                <!-- pのなかを考えてね -->
            <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
